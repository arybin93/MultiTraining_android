<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.multitraining"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.multitraining.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.multitraining.TrainingActivity"
    		android:label="@string/Training"
    		android:configChanges="orientation|screenSize">
		</activity>
        
        <activity android:name="com.example.multitraining.PlayActivity"
    		android:label="@string/Play"
    		android:screenOrientation="portrait"
    		android:configChanges="orientation|screenSize">
		</activity>
        
        <activity android:name="com.example.multitraining.StatActivity"
    		android:label="@string/Stat"
    		android:screenOrientation="portrait"
    		android:configChanges="orientation|screenSize">
		</activity>
		
    </application>

</manifest>
